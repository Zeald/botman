{
    "name": "zeald/botman",
    "license": "MIT",
    "description": "Create messaging bots in PHP with ease. A Botman fork by Zeald to support Laravel 7.",
    "keywords": [
        "Bot",
        "BotMan",
        "Chatbot"
    ],
    "homepage": "https://github.com/Zeald/fork.botman",
    "authors": [
        {
            "name": "Ariel Magbanua",
            "email": "ariel.magbanua@zeald.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "symfony/http-foundation": "^2.8 || ^3.0 || ^4.0 || ^5.0",
        "tightenco/collect": "^5.0 || ^6.0 || ^7.0",
        "opis/closure": "^2.3 || ^3.1",
        "mpociot/pipeline": "^1.0",
        "react/socket": "^1.0 || ^1.4",
        "spatie/macroable": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "codeigniter/framework": "^3.1",
        "orchestra/testbench": "^5.0 || ^6.0",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "mockery/mockery": "^1.1 || ^1.4",
        "doctrine/cache": "^1.10",
        "symfony/cache": "^3.1 || ^5.0",
        "ext-curl": "*"
    },
    "suggest": {
        "doctrine/cache": "Use any Doctrine cache driver for cache",
        "symfony/cache": "Use any Symfony cache driver for cache"
    },
    "autoload": {
        "psr-4": {
            "BotMan\\BotMan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BotMan\\BotMan\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "laravel": {
            "providers": [
                "BotMan\\BotMan\\BotManServiceProvider"
            ],
            "aliases": {
                "BotMan": "BotMan\\BotMan\\Facades\\BotMan"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "php-cs-fixer fix"
    }
}
